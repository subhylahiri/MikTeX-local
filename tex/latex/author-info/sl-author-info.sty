\AtBeginDocument {
  % Build the displayed lists
  \exp_args:NnV \UseInstance { people-block } \g_slauth_instance_tl
    { \g__slauth_au_wait_seq } { \g__slauth_author_seq }
    { \g__slauth_affiliation_used_prop } { \g__slauth_email_used_prop }
    { \g__slauth_thanks_used_prop  }
}
