%get counter name
% Mandatory argument: label to ref.
% Last optional argument assigned to.
%
\NewDocumentCommand \refcountname { m o }
{
  \__refnum_get_name:Nn \g_tmpa_tl {#1}
  \__refnum_output:Nn \g_tmpa_tl {#2}
}

%get counter / parent counter value as string
% #1 Optional: How many generations up parent counters do we go?
% #2 Mandatory: label to ref.
% #3 Optional: assigned to.
%
\NewDocumentCommand \refnum { O{0} m o }
{
  \__refnum_get_counter:Nnn \g_tmpa_tl {#1} {#2}
  \__refnum_output:Nn \g_tmpa_tl {#3}
}

%assign ref counter to other counter
% #1 Optional: How many generations up parent counters do we go?
% #3 Optional: Counter type to change
% #3 Mandatory: label to ref.
%
\NewDocumentCommand \reftocounter { O{0} d<> m }
{
  % If we haven't been given a counter name, get it from ref
  \IfNoValueTF{#2}
    { \__refnum_get_name:Nn \g_tmpb_tl {#3} }
    { \tl_set:Nn \g_tmpb_tl {#2} }
  % assign to counter
  \__refnum_to_counter:Vnn \g_tmpb_tl {#1} {#3}
}

%temporarily assign ref counter to other counter & display
% #1 Starred: Suppress hyperlink?
% #2 Optional: How many generations up parent counters do we go?
% #3 Optional: Counter type to display as
% #4 Mandatory: label to ref.
% #5 Optional: assigned to.
%
\NewDocumentCommand \asref { s O{0} d<> m o }
{
  % If we haven't been given a counter name, get it from ref
  \IfNoValueTF{#3}
    { \__refnum_get_name:Nn \g_tmpb_tl {#4} }
    { \tl_set:Nn \g_tmpb_tl {#3} }
  \__refnum_as_counter:NVnn \g_tmpa_tl \g_tmpb_tl {#2} {#4}
%
  \IfBooleanTF{#1}
    {}
    {
      \tl_set_eq:NN \g_tmpb_tl \g_tmpa_tl
      \tl_set:Nx \g_tmpa_tl { { \g_tmpb_tl } }
      \tl_put_left:Nn \g_tmpa_tl { \hyperref[#4] }
    }
  \__refnum_output:Nn \g_tmpa_tl {#5}
}

