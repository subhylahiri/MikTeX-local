\ProvideDocumentCommand \parentcounter { t! O{1} m o }
{
  \tl_set:Nn \l__refnum_tmpa_tl {#3}
  \__refnum_ancestor_name:Nn \l__refnum_tmpa_tl {#2}
  \__refnum_output:Nnn \l__refnum_tmpa_tl {#4} {#1}
}

