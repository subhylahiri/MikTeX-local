% Local version of \setcounter
% #1: name of counter, token-list
% #2: new value, int-expression
%
\cs_new_protected:Nn \refnum_defcounter:nn
{
  \cs_if_exist:cTF { c@#1 }
    { \int_set:cn { c@#1 } {#2} }
    { \msg_error:nnn { refnum } { bad-counter } {#1} }
}
