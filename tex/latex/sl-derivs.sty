%%  This defines custom derivative notation.
%%
%% Requires packages: etoolbox
%%
%% All delimiters use \left,\middle,\right by default.
%% They can be changed on a case--by--case basis by prefixing the command
%% with \mnorm, \mbigg, \mauto, etc.
%% e.g.
%%    \begin{equation}
%%      \diff[2]{u}{v} = \pdiffm{f}{x,y,z} \pdiff{w}{k}.
%%    \end{equation}
%%
%% Derivatives defined:
%%    \diff[n]{y}{x}
%%    \pdiff[n]{y}{x}
%%    \pdiffc[y]{z}{x}
%%    \pdiffm{w}{x,y,z}
%%    \fdf{S}{q(t)}
%%    \fdfm{S}{q(t),p(t')}
%%    \pdl
%%    \pdr
%%    \pdlr
%%    \intd[_0^\infty]{t} f(t)
%%    \integ[f(x)]{x}
